<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>007 Flughafen Taxi</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

</head>
<body>
    <div class="row">
        <div class="text-center">
            <div style="display:inline-block">
                <img style="width:80px;height:80px;" src="~/Content/pic/vienna-airport-cab-banner.gif" />   
            </div>
            <div style="display:inline-block;margin-left:150px;">
                <img src="~/Content/pic/card.jpg" />
            </div>
            <div style="display:inline-block;margin-left:150px;">
                <img src="~/Content/pic/british-flag.jpg" />
                <img src="~/Content/pic/flag-german.jpg" />
            </div>
        </div>
        
            <span class="h3" style="color:red;margin-left: 41px;">FLUGHAFENTAXI.AT</span>
        <div class="container" id="Flaughafentaxi">
            @*<hr style="border: 2px solid red;" />
            <hr style="border: 2px solid red;" />*@
        </div>
    </div>

    <div class="jumbotron" style="padding-top:50px;margin-top:50px;">
        
        <div class="container body-content">
            <div class="navbar navbar-inverse">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                        <label id="logo" class="navbar-brand" style="cursor:pointer">
                            <img src="~/Content/pic/taxi logo.jpg" style="height:35px;width:80px;"/>  </label>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav" style="padding-top:7px;">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Booking", "Booking", "Booking")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                        </ul>
                    </div>
                </div>
            </div>
            @*<h1>Taxi airport Vienna</h1>*@

            @RenderBody()
        </div>
    </div>
    <hr />
    <footer>
        <p style="color:white">&copy; @DateTime.Now.Year - DViG Development Team</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/jvfloat.css" rel="stylesheet" />
    <link href="~/Scripts/select2.css" rel="stylesheet" />
    <script src="~/Scripts/select2.js"></script>
    <!--<script src="~/Scripts/jvfloat.min.js"></script>-->
</body>
</html>
