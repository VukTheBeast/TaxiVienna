<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flughafen Taxi Bond</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style>
        .navbar-inverse .navbar-nav > .open > a, .navbar-inverse .navbar-nav > .open > a:hover, .navbar-inverse .navbar-nav > .open > a:focus {
            background-color: inherit;
        }
    </style>

</head>
<body>
    <div class="row">
        <div class="text-center">
            <div style="display:inline-block">
                <img src="~/Content/pic/taxi logo.jpg" style="height:55px;width:250px;margin-right:180px;" />
                <img style="width:80px;height:80px;" src="~/Content/pic/vienna-airport-cab-banner.gif" />   
            </div>
            <div style="display:inline-block;margin-left:150px;">
                <img src="~/Content/pic/card.jpg" />
            </div>
            <div style="display:inline-block;margin-left:150px;">
                <img src="~/Content/pic/british-flag.jpg" />
                <img src="~/Content/pic/flag-german.jpg" />
            </div>
        </div>
        
            
        <div class="container" id="Flaughafentaxi">
            
            @*<hr style="border: 2px solid red;" />
            <hr style="border: 2px solid red;" />*@
        </div>
    </div>

    <div class="jumbotron" style="padding-top:50px;margin-top:50px;">
        
        <div class="container body-content">
            <div class="navbar navbar-inverse">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                        <label id="logo" class="navbar-brand" style="cursor:pointer">
                            <img src="~/Content/pic/JamesBond007Pix.jpg" style="height:35px;width:80px;" />  </label>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav" style="padding-top:7px;">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Booking <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Booking to Airport", "Booking", "Booking")</li>
                                    <li>@Html.ActionLink("Booking from Airport", "BookingFrom", "BookingFrom")</li>
                                    @*<li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Separated link</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">One more separated link</a></li>*@
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                        </ul>
                    </div>
                </div>
            </div>
            @*<h1>Taxi airport Vienna</h1>*@

            @RenderBody()
        </div>
    </div>
    <hr />
    <footer>
        <p style="color:white">&copy; @DateTime.Now.Year - DViG Development Team</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/jvfloat.css" rel="stylesheet" />
    <link href="~/Scripts/select2.css" rel="stylesheet" />
    <script src="~/Scripts/select2.js"></script>
    <!--<script src="~/Scripts/jvfloat.min.js"></script>-->
</body>
</html>
